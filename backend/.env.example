# Remote Works Backend Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME=Remote Works API
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development

# Database
# For local development (SQLite - easiest to get started)
DATABASE_URL=sqlite:///./remoteworks.db

# For production (PostgreSQL - recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/remoteworks

# For Google Cloud SQL (when deployed to Cloud Run)
# DATABASE_URL=postgresql://user:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Security
# IMPORTANT: Generate a secure key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allowed frontend origins
# For local development (comma-separated or JSON array)
BACKEND_CORS_ORIGINS=http://localhost:3000

# For production (JSON array format)
# BACKEND_CORS_ORIGINS=["https://www.remote-works.io","https://remote-works.io"]

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email - MailerSend (REQUIRED for email notifications)
# Get your API key from: https://app.mailersend.com/api-tokens
# Make sure your domain is verified in MailerSend
MAILERSEND_API_KEY=mlsn.your-api-key-here
FROM_EMAIL=noreply@remote-works.io
FROM_NAME=Remote-Works

# Stripe (Optional - for payment features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# AI Services (Optional - for AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini  # Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
ANTHROPIC_API_KEY=

# OAuth Providers (Optional)
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# Hugging Face OAuth
HUGGINGFACE_CLIENT_ID=
HUGGINGFACE_CLIENT_SECRET=

# Proof-of-Build (Internal - for build verification)
PROOF_SIGNATURE_KEY=proof-signature-key-change-in-production
